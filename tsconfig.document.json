{
  "extends": "@unconfig/ts-config/document.vitepress.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@eo-cli/*": [
        "packages/*/src",
        "packages/commands/*/src",
        "packages/core/*/src",
        "packages/models/*/src"
      ]
    },
    "composite": true
  },
  "include": [
    "apps/document",
    "apps/document/.vitepress",
    "packages/**/*",
    "packages/**/*.json",
    "packages/**/typings/**/*",
    "typings/**/*"
  ]
}
